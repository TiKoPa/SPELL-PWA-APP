run = "npm run dev"
modules = ["nodejs-20"]
hidden = [
  ".config",
  "tsconfig.json",
  "tsconfig.node.json",
  "vite.config.js",
  ".gitignore",
]
entrypoint = "src/App.tsx"

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[env]
PORT = "5173"

[deployment]
deploymentTarget = "preview"    # ✅ вместо static
build = ["npm", "run", "build"]
publicDir = "dist"

[[ports]]
localPort = 5173  # ✅ основной порт
externalPort = 80 # ✅ Replit откроет на .replit.dev
